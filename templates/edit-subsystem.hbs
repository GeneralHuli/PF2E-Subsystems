<form class="editable" autocomplete="off">
    <header class="sheet-header">
        <img src="systems/pf2e/icons/actions/Passive.webp" data-edit="img">
        <div class="details">
            <input name="title" type="text" value="{{object.title}}" placeholder="Activity Name" spellcheck="false" aria-label="Name">
        </div>
    </header>
    <nav class="sheet-tabs">
        <div class="sidebar-summary">Activity Settings</div>
        <div class="tabs" data-tab-container="primary">
            <a class="list-row" data-tab="description">Description</a>
            <a class="list-row" data-tab="actions">Actions</a>
            <a class="list-row" data-tab="rewards">Rewards</a>
        </div>
    </nav>
    <div class="sheet-content">
        <section class="sidebar" data-tooltip-direction="UP">
            <div class="inventory-details">
                <div class="form-group">
                    <label for="activity-points">Current Points</label>
                    <input id="activity-points" name="points" type="number" value={{object.points}} />
                </div>
                <div class="form-group">
                    <label for="activity-endPoint">End Goal</label>
                    <input id="activity-endPoint" name="endPoint" type="number" value={{object.endPoint}} />
                </div>
                <div class="form-group">
                    <label for="activity-success">Default Success Rate</label>
                    <input id="activity-success" name="success" type="text" value={{object.success}} />
                </div>
                <div class="form-group">
                    <label for="activity-turnBased">Turn Based Activity</label>
                    <input id="activity-turnBased" name="turnBased" type="checkbox" {{#if object.turnBased}}checked{{/if}} />
                </div>
                <div class="form-group">
                    <label for="activity-automatic">Accrued Per Turn</label>
                    <input id="activity-automatic" name="automatic" type="number" value={{object.automatic}} />
                </div>
            </div>
        </section>
        <div class="sheet-body">
            <section class="tab description" data-tab="description">
                <section class="main editor-container">
                    {{editor enrichedContent.description target="description" button=true editable=true engine="prosemirror"}}
                </section>
            </section>
            <section class="tab actions" data-tab="actions">

            </section>
            <section class="tab rewards" data-tab="rewards">
                <div class="rewards">
                    <div class="rewards-forms">
                        {{#each object.rewards as |reward|}}
                            <section class="rewards-form" data-id={{reward.id}}>
                                <header class="reward-header">
                                    <i class="fa-solid fa-bars drag-handle"></i>
                                    <h3>Reward Rank</h3><input name="rewards.{{reward.id}}.rank" type="number" value={{reward.rank}} style="width: 3rem;"/>
                                    <div class="item-controls">
                                        <a class="remove-reward" data-id={{reward.id}} data-tooltip="Remove Reward">
                                            <i class="fa-solid fa-fw fa-trash"></i>
                                        </a>
                                    </div>
                                </header>
                                <div class="container" style="display: grid;">
                                    <div class="stacked">
                                        <div class="grid-item xp">
                                            <label>XP</label>
                                            <input name="rewards.{{reward.id}}.xp" type="number" value={{reward.xp}} />
                                        </div>
                                        <div class="grid-item treasure">
                                            <label>Treasure:</label>
                                            <label>pp</label><input name="rewards.{{reward.id}}.treasure.pp" type="number" value={{reward.treasure.pp}} />
                                            <label>gp</label><input name="rewards.{{reward.id}}.treasure.gp" type="number" value={{reward.treasure.gp}} />
                                            <label>sp</label><input name="rewards.{{reward.id}}.treasure.sp" type="number" value={{reward.treasure.sp}} />
                                            <label>cp</label><input name="rewards.{{reward.id}}.treasure.cp" type="number" value={{reward.treasure.cp}} />
                                        </div>
                                    </div>
                                </div>
                            </section>
                        {{/each}}
                    </div>
                    <div class="create-reward">
                        <a data-action="add-reward">
                            <i class="fa-solid fa-plus"></i>
                            New Reward
                        </a>
                    </div>
                </div>
            </section>
        </div>
    </div>
</form>